<!-- View for displaying the collection -->
<!-- Needs to get the whole coin database passed -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <link rel="icon" type="image/png" href="https://images.emojiterra.com/google/android-11/512px/1fa99.png">

    <style>
        /* Literally just the styling for hovering cards, everything else is bootstrap or embedded */
        .coin-card:hover {
            border-color: black;
            transition: .5s;
        }

        .coin-card {
            transition: .5s;
        }
    </style>

    <title>Document</title>
</head>

<body>
    <nav class="navbar sticky-top navbar-light bg-light" style="border-bottom: 2px solid black;">
        <h1 class="title">Coin Gallery</h1>
        <a href="/" class="btn btn-primary">Back to Main Page</a>
    </nav>
    <div class="container">

        <div id="gallery" class="d-flex flex-wrap align-items-center">
            <!-- Possibly create a _coin_card.ejs if this needs to be used in other pages -->
            <% coins.forEach(coin=> { %>
                <div class="coin-card card m-1" style="width: 32%; min-width: 200px;">
                    <div class="card-body">
                        <!-- Card Title is Coin Date -->
                        <h2 class="card-title">
                            <%= coin.year %>
                        </h2>
                        <div class="card-text">
                            <%= coin.denomination %>
                        </div>
                        <div class="card-text">
                            Mint Mark: <%= coin.mint %>
                        </div>
                        <% if (coin.design !=='none' ) {%>
                            <div class="card-text">
                                <%= coin.design%>
                            </div>
                            <% }%>
                                <form action=<%=`/delete/${coin.id}`%> method="POST">
                                    <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you would like to delete this coin?')">
                                        Delete
                                    </button>
                                </form>
                    </div>
                </div>
                <% })%>
        </div>
    </div>
</body>

</html>