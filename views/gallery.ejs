<!-- View for displaying the collection -->
<!-- Needs to get the whole coin database passed -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="gallery">
        <!-- Possibly change this to use _coin_card.ejs -->
        <% coins.forEach(coin => { %>
            <div class="coin-card">
                <%= coin.denomination %>
                <%= coin.year %>
            </div>
        <% })%>


    </div>
    
</body>
</html>