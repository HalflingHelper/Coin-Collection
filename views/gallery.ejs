<body>
    <div id="gallery">
        <!-- Possibly change this to use _coin_card.ejs -->
        <% coins.forEach(coin => { %>
            <div class="coin-card">
                <%= coin.denomination %>
                <%= coin.year %>
            </div>
        <% })%>


    </div>
    
</body>
</html>